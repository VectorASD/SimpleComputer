#!/bin/bash
echo -en "\e[H\e[J" # стирает экран

echo -en "\e[5;10H" # перемещает курсор на позицию 5, 10
echo -en "\e[40m" # чёрный фон
echo -en "\e[31m" # красные буквы
echo -en "Михаил"

echo -en "\e[4;20H\e[103m\e[34mПрилепа" # всё в перемешку. Не входит в задание

echo -en "\e[6;8H"
echo -en "\e[107m" # белый фон
echo -en "\e[32m" # зелёные буквы
echo -en "ИП-111"

echo -en "\e[10;1H"
echo -en "\e[0m" # сброс цвета фона и букв
